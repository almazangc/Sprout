<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:left="10dp"
        android:right="0dp"
        android:top="10dp"
        >
        <shape android:shape="rectangle">
            <stroke android:color="@color/NIGHT" android:width="2dp"/>
            <corners android:radius="15dp"/>
            <solid android:color="@color/CLOUDS"/>
        </shape>
    </item>

    <item
        android:bottom="10dp"
        android:left="0dp"
        android:right="10dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/NIGHT"/>
            <corners android:radius="15dp"/>
            <solid android:color="@color/CLOUDS"/>
        </shape>
    </item>
</layer-list>