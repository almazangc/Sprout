<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:left="3dp"
        android:right="0dp"
        android:top="3dp"
        >
        <shape android:shape="rectangle">
            <stroke android:color="@color/NIGHT" android:width="1dp"/>
            <corners android:radius="5dp"/>
            <solid android:color="@color/WAIKAWA_GREY"/>
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="0dp"
        android:right="3dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/NIGHT"/>
            <corners android:radius="5dp"/>
            <solid android:color="@color/CLOUDS"/>
        </shape>
    </item>
</layer-list>